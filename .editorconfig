 #EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
charset = utf-8
indent_style = tab
indent_size = 4
trim_trailing_whitespace = true
insert_final_newline = true

[{.travis.yml,package.json,*.js}]
indent_style = space
indent_size = 2

[*.md]
trim_trailing_whitespace = false
